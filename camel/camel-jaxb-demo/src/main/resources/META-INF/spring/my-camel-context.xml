            <from uri="timer://foo?fixedRate=true&amp;period=100s"/>
            <transform>
                <simple>Hello Web Application, how are you?</simple>
            </transform>
            <log message="${body}"/>
        </route>
    </camelContext>
    -->
    <bean id="myProcessor" class="com.mycompany.jaxbdemo.beans.MyProcessor" />

    <camelContext id="my-jaxb-demo" xmlns="http://camel.apache.org/schema/spring">
        <route>
            <from uri="file:///var/opt/data/in"/>
            <unmarshal>
                <jaxb prettyPrint="false" contextPath="com.mycompany.jaxbdemo.model"/>
            </unmarshal>
            <bean ref="myProcessor" method="makeHello"/>
            <log message="${body}"/>
        </route>
    </camelContext>

</beans>
